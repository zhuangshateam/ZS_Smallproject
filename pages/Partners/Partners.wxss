/* 卡片样式 */

.partners_card {
  position: relative;
  width: 95vw;
  height: 340rpx;
  padding: 40rpx;
  background-size: 100%;
  background-image: url("https://www.izhuangsha.com/api/images/cooperation_img/cooperation_bj.jpg");
  margin: 20rpx auto;
  border-radius: 10px;
  overflow: hidden;
}

.card_top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  overflow: hidden;
}

.noLogo {
  width: 76rpx;
  height: 76rpx;
  padding-top: 10rpx;
  background-color: #eee;
  color: #999;
  font-size: 22rpx;
  text-align: center;
}

.beLogo {
  width: 76rpx;
  height: 76rpx;
}

.tLeft {
  display: flex;
  flex-direction: row;
}

.info {
  padding-left: 20rpx;
  color: #fff;
}

.linkman {
  font-size: 36rpx;
}

.company {
  font-size: 24rpx;
}

.trigth text {
  font-size: 28rpx;
  color: #fff000;
}

.card_middle {
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  line-height: 140rpx;
}

.card_bottom {
  height: 58rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}

.bLeft text {
  color: #fff;
  font-size: 24rpx;
}
.changeInfo{
  position: absolute;
  right: 0;
  bottom: 0;
  
}
.changeInfo image{
  width: 80rpx;
  height: 80rpx;
  vertical-align: top;
}
/* 合作流程 */

.flow {
  position: relative;
  width: 95vw;
  min-height: 784rpx;
  margin: 0 auto;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 20rpx;
}

.title {
  padding-left: 10rpx;
  border-left: 10rpx solid #d8497c;
}

.line_ms {
  padding-top: 10rpx;
  border-bottom: 1px solid #eee;
}

.flow_text {
  display: flex;
  flex-direction: column;
}

.flow_text text {
  line-height: 50rpx;
}

.bg-red {
  background: #d8497c;
}

.btnWrap {
  display: flex;
  justify-content: center;
}

.cu-btn {
  width: 90vw;
  position: absolute;
  bottom: 20rpx;
  height: 88rpx;
  font-size: 32rpx;
}

/* 我的产品 */

.noProduct {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 720rpx;
}

.noProduct image {
  width: 400rpx;
  height: 400rpx;
}

.news-list {
  padding: 10rpx;
  border-bottom:1px solid #eee;
}

.itemP_top {
  display: flex;
  flex-direction: row;
}

.txt_nickname {
  width: 240rpx;
  height: 148rpx;
  overflow: hidden;
}

.news_img {
  width: 240rpx;
  height: 148rpx;
}

.news-list-right {
  width: 63%;
  padding-left: 10rpx;
}

.news-title {
  height: 80rpx;
  font-size: 32rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.itemP_bottom{
  display: flex;
  flex-direction: row;
  padding-top: 10rpx;
  align-items: center;
}
.botLeft{
  width: 240rpx;
  text-align: center;
  font-size:28rpx; 
  color:red;
  border-right: 1px solid #eee;
}
.botRight{
  width: 63%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;

}
.botRight image{
  width: 50rpx;
  height: 50rpx;
}