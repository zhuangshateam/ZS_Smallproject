/* 圆形悬浮按钮 */
.round-click{
    height: 120rpx;
    width: 120rpx;
    background-color: #D8497C;
    border-radius: 100%;
    position: fixed;
    bottom: 120rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.round-click navigator{
    font-size: 32rpx;
    max-width: 80rpx;
    color: #fff;
    text-align: center;
}