/* 列表 */
navigator {
  width: 98vw;
  display: flex;
  justify-content: flex-start;
}
.page {
  height: 100Vh;
  width: 100vw;
}

.page.show {
  overflow: hidden;
}

.switch-sex::after {
  content: "\e716";
}

.switch-sex::before {
  content: "\e7a9";
}

.switch-music::after {
  content: "\e66a";
}

.switch-music::before {
  content: "\e6db";
}

.marginL{
margin-left: 20rpx;
}


/*控制text行数*/
.news-list-right text{
  display: -webkit-box;
    font-size:28rpx;
    line-height: 40rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
    overflow: hidden;
    text-overflow:ellipsis;
}


