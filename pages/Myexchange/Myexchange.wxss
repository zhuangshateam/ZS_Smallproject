
/*列表*/
.news-list{
  margin-top: 10rpx;
  padding: 10rpx;
  border-bottom:0.5rpx solid #dddddd;
  display:  flex;
  width: 100%;
  background-color: #FFFFFF;
}
.news-list .news_img{
  width: 320rpx;
  height: 180rpx;
  display: flex;
  margin-left: 10rpx;
}
.txt_nickname{
  display:flex;
  width: 290rpx;
  height: 205rpx;
  flex-direction:row;
  flex-wrap:wrap;
  align-content:center;
}
.txt_nickname text{
  width: 140rpx;
  text-align: center;
  font-size: 24rpx;
  margin-top: 10rpx;
  margin-left: 12rpx;
overflow:hidden;
    display: -webkit-box;
  text-overflow:ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  color: #D8497C;
  /* //超出一行文字自动隐藏 */
  /* overflow:hidden;  */
  /* //文字隐藏后添加省略号 */
  /* text-overflow:ellipsis; */
  /* //强制不换行 */
  /* white-space:nowrap;  */

}

.news-list-right{
  display:flex;
  padding-top: 10rpx;
  margin-left: 20rpx;
  padding-right: 44rpx;
  padding-left: 0;
  width:100%;
  flex-direction: column;
}
.news-title{
  font-size:32rpx;
  margin-right: 12rpx;
  font-weight:bold;
  color:  #000000;
  overflow:hidden; 
  display: -webkit-box;
  text-overflow:ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;

}
.news_grou{
  display: flex;
  font-size: 26rpx;
    height: 70rpx;
    overflow:hidden; 
  display: -webkit-box;
  text-overflow:ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.list_grou{
  display: flex;
  flex-direction: row;

}
.item_i{
  position: relative;
display: inline-flex;
}
.news_info{
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  flex: 1; /* 重要 */
   align-items:center;

}

