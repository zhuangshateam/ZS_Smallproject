@import '/colorui/icon.wxss';
@import '/colorui/main.wxss';
/**app.wxss**/
.container_main {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  font-family: "微软雅黑";
}

page{
height: 100%;
}

.navbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  z-index: 10;
  height: 120rpx;
}

.navbar ul li {
  float: left;
  width: 25%;
  text-align: center;
  margin: 10rpx auto;
  color: #b5b5b5;
}

.navbar ul li image {
  width: 75rpx;
  height: 60rpx;
  display: block;
  margin: 0 auto;
}

.navbar-name {
  display: block;
  font-size: 26rpx;
}

.active {
  color: #de9dbb;
}
.showerror {
  text-align: center;
  font-weight: normal;
  font-size: 30rpx;
  line-height: 40rpx;
  color: #757575;
  margin-top: 100rpx;
}
.errortext {
  margin-top: 50rpx;
  table-layout: center;
}

/* 匿名发布、经验发布、体验发布 */
.pr{
  position: relative;
}
.pa{
  position: absolute;
}
.pf{
  position: fixed;
}
.border_top{
  border-top:1px #eee solid;
}
