.commodity_screen2 {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
   background: rgba(0, 0, 0, 1.0);
  opacity: 0.5;
  overflow: hidden;
  z-index: 998;
  color: #fff;

}
.commodity_attr_box2 {
  width: 90%;
  overflow: hidden;
  position: fixed;
  left: 50%;
  top: 50%;
  z-index: 999;
  background: #fff;
  -webkit-transform: translateX(-50%) translateY(-50%);
  -moz-transform: translateX(-50%) translateY(-50%);
  -ms-transform: translateX(-50%) translateY(-50%);
  transform: translateX(-50%) translateY(-50%);
  background: #fff;
  padding-top: 20rpx;
  padding-bottom: 30rpx;
}
